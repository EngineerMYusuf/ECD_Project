<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="myusuf.ecd.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:text="GreenHouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:gravity="center"
        android:textSize="60sp"
        android:textColor="@android:color/holo_blue_light"
        android:layout_marginTop="51dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/setTemp1"
        android:textSize="20sp"
        android:textColor="@android:color/holo_red_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:ems="10"
        android:layout_above="@+id/setTemp2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="53dp" />

    <TextView
        android:id="@+id/setTemp2"
        android:textSize="20sp"
        android:textColor="@android:color/holo_red_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/getHum1"
        android:layout_toEndOf="@+id/getHum1" />
    <TextView
        android:id="@+id/textTemp1"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:ems="10"
        android:text="Temperature of Room 1"
        android:layout_alignBaseline="@+id/setTemp1"
        android:layout_alignBottom="@+id/setTemp1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textTemp2"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:ems="10"
        android:text="Temperature of Room 2"
        android:layout_alignBaseline="@+id/setTemp2"
        android:layout_alignBottom="@+id/setTemp2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/textHum2"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:ems="10"
        android:text="Humidity of Plant 2"
        android:layout_alignBaseline="@+id/setHum2"
        android:layout_alignBottom="@+id/setHum2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textHum1"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:ems="10"
        android:text="Humidity of Plant 1"
        android:layout_alignBaseline="@+id/setHum1"
        android:layout_alignBottom="@+id/setHum1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/setHum1"
        android:textSize="40sp"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/setTemp2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/setHum2"
        android:textSize="40sp"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:ems="10"
        android:layout_above="@+id/getHum2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Water Plant 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getHum1"
        android:layout_below="@+id/setHum1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:text="Water Plant 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getHum2"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/getHum1"
        android:layout_alignStart="@+id/getHum1"
        android:layout_marginBottom="29dp" />

</RelativeLayout>